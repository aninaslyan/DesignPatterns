{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2016", "dom"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./behavioral/**/*.ts",
    "./creational/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
